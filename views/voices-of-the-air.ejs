<div class="shield">
	<p>ENTER PASSWORD</p>
	<input id="passwordInput" type="password" name="">
	<button id="passwordSubmit">Submit</button>
</div>
<script type="text/javascript">
	var shieldOn = true,
		submitButton = document.querySelector('#passwordSubmit'),
		input = document.querySelector('#passwordInput'),
		pageWrapper = document.querySelector('.vota-page-wrapper'),
		shield = document.querySelector('.shield');


	if (shieldOn) {
		submitButton.addEventListener('click', function() {
			if (input.value === 'voice123') {
				pageWrapper.style.display = 'block';
				shield.style.display = 'none';
				window.mixpanel.track('VOTA Password Entered');
			} else {
				window.alert('Incorrect password.');
				window.mixpanel.track('VOTA Incorrect Password');
			}
		});

		input.addEventListener("keydown", function (e) {
		    if (e.keyCode === 13) {
		        if (input.value === 'voice123') {
					pageWrapper.style.display = 'block';
					shield.style.display = 'none';
					window.mixpanel.track('VOTA Password Entered');
				} else {
					window.alert('Incorrect password.');
					window.mixpanel.track('VOTA Incorrect Password');
				}
		    }
		});
	} else {
		pageWrapper.style.display = 'block';
		shield.style.display = 'none';
	}

	if (window.addEventListener) {
	// W3C standard
	window.addEventListener('load', loadTracking, false); // NB **not** 'onload'
	} else if (window.attachEvent) {
	// Microsoft
	window.attachEvent('onload', loadTracking);
	}

	function loadTracking () {
		window.mixpanel.track('VOTA Landing Page View');
	}
</script>