<script type="text/javascript">
	var shieldOn = true,
		submitButton = document.querySelector('#passwordSubmit'),
		input = document.querySelector('#passwordInput'),
		pageWrapper = document.querySelector('.vota-page-two-wrapper'),
		shield = document.querySelector('.shield');


	if (shieldOn) {
		submitButton.addEventListener('click', function() {
			if (input.value === 'voice123') {
				pageWrapper.style.display = 'block';
				shield.style.display = 'none';
			} else {
				window.alert('Incorrect password.');
			}
		});

		input.addEventListener("keydown", function (e) {
		    if (e.keyCode === 13) {
		        if (input.value === 'voice123') {
					pageWrapper.style.display = 'block';
					shield.style.display = 'none';
				} else {
					window.alert('Incorrect password.');
				}
		    }
		});
	} else {
		pageWrapper.style.display = 'block';
		shield.style.display = 'none';
	}
</script>